#!/usr/bin/env node

	var colors = require('colors'),
		argv = require('yargs')
				  .option('p', {
				    alias : 'port',
				    demand: false,
				    default: 8080,
				    describe: '端口',
				    type: 'number'
				  })
				  .argv

	var httpServer = require('./../app/index.js')
	// var httpServer = require('./../app/app.js')
	httpServer(argv.p)
	console.log(('proxy-mock start ......').green)
	console.log(('proxy-mock start ....').green)
	console.log(('proxy-mock start .').green)
	console.log(('proxy-mock start').green)


